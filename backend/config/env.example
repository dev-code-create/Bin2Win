# Simhastha 2028 Clean & Green Backend Environment Configuration

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/simhastha-clean-green
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/simhastha-clean-green

# Database Connection Options
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=simhastha-clean-green
JWT_AUDIENCE=simhastha-users

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_DELAY=60

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CSRF_SECRET=your-csrf-secret-here

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@simhastha2028.org

# SMS Configuration (Optional - for OTP)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase Configuration (Optional)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# Feature Toggles
ENABLE_OTP_AUTH=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=false
